doctype html
html
  head
    title Store
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js")
  body
    nav(class="navbar navbar-expand-sm bg-light")
      div(class="container-fluid")
        div(class="navbar-header")
          a(class="navbar-brand" href = "/") Dashboard
        ul(class="navbar-nav")
          li(class="nav-item")
            a(class="nav-link" href="/marketplace") Marketplace
          li(class="nav-item")
            a(class="nav-link" href="/login") LogIn

    h1(class = "text-center") Marketplace
    div(class = "row")
      each item, index in items
        div(class = "card bf-light col-md-2")
          - var iter = index + 1
          a(href="/item/" + iter)
            h5(class = "text-right") #{item.cost} HYDRO
            img(src= item.image, alt="No item image found" class = "card-img-top" style = "width:100%")
            h4(class = "text-center") #{item.name}
